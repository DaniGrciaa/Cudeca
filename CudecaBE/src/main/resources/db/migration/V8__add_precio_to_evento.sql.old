-- Añadir columna tipo a la tabla evento
ALTER TABLE evento ADD COLUMN tipo VARCHAR(20);

-- Comentario explicativo
COMMENT ON COLUMN evento.tipo IS 'Tipo de evento: CENA, CONCIERTO, MARCHA, RIFA';

